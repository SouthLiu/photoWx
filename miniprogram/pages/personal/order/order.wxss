/* miniprogram/pages/personal/order/order.wxss */
page {
  background-color: #f7f7f7;
}

.order {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  padding: 50rpx 0;
  color: #676767;
}

.item {
  display: flex;
  align-items: center;
  width: 100vw;
  background-color: #fff;
  border-top: 2rpx solid #ececec;
  border-bottom: 2rpx solid #ececec;
  position: relative;
  z-index: 999;
}

movable-area {
  height: 120rpx;
  width: calc(100vw - 160rpx);
}

movable-view {
  height: 120rpx;
  width: 100vw;
  background: #fff;
  z-index: 999;
}

.order-item {
  height: 100%;
  width: 100vw;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 999;
}

.remove{  
  width: 160rpx;  
  height: 100%;  
  background-color: red; 
  color: white; 
  position: absolute;  
  top: 0;  
  bottom: 0;
  right: 0;  
  display: flex;  
  justify-content: center;  
  align-items: center;  
}  

.camera-box {
  display: flex;
  align-items: center;
}

.camera {
  width: 75rpx;
  height: 75rpx;
  margin: 0 30rpx 0 80rpx;
}

.info-box {
  display: flex;
  flex-direction: column;
}

.client-box {
  display: flex;
  align-items: center;
}

.name {
  margin-right: 30rpx;
}

.select {
  margin-right: 10rpx;
}