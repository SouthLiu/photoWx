/* pages/personal/index/components/prompt/prompt.wxss */
.prompt-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 26rpx;
  padding:0 30rpx;
  position: absolute;
  top: 250rpx;
  z-index: 13;
  overflow: hidden;
}

.cover {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.3;
  background-color: #000;
}

.title {
  font-size: 34rpx;
  margin: 40rpx 0 20rpx;
}

.info {
  font-size: 26rpx;
  color: #676676;
}

.auth {
  width:500rpx;
  height:350rpx;
  margin-top: 20rpx;
}

.btn {
  display:flex;
  align-items:center;
  justify-content:center;
  width:380rpx;
  height:65rpx;
  margin:40rpx 0 30rpx;
  font-size:28rpx;
  border-radius:45rpx;
  color:#fff;
  background-color:#ee7f31;
}