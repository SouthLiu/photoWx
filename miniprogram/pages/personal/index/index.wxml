<!--miniprogram/pages/personal/index/index.wxml-->
<view class="index">
  <view class="head-box">
    <image class="head" src="{{headImg}}" wx:if="{{!userHead}}" />
    <image class="head" src="{{userHead}}" wx:if="{{userHead}}" />
  </view>

  <text class="user-name" wx:if="{{!userName}}">{{names}}</text>
  <text class="user-name" wx:if="{{userName}}">{{userName}}</text>
</view>

<personal-btns></personal-btns>

<personal-prompt wx:if="{{isAuth}}" bind:bindGetUserInfo="bindGetUserInfo"></personal-prompt>